{
  "name": "@treksistem/api",
  "version": "0.1.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "/opt/homebrew/bin/wrangler dev src/index.ts",
    "deploy": "wrangler deploy",
    "build": "echo 'Build step handled by wrangler deploy'",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,json,md,css,html}\" --cache"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.0",
    "@treksistem/auth": "workspace:*",
    "@treksistem/db": "workspace:*",
    "@treksistem/geo": "workspace:*",
    "@treksistem/notifications": "workspace:*",
    "@treksistem/storage": "workspace:*",
    "arctic": "^1.0.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.4.7",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "better-sqlite3": "^11.7.0",
    "drizzle-kit": "^0.20.14",
    "typescript": "^5.0.0",
    "vitest": "^3.2.3",
    "wrangler": "^3.57.2"
  }
}
