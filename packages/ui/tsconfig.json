{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["react", "react-dom"]
  },
  "include": [
    "src/index.ts",
    "src/react-components.tsx",
    "src/svelte/index.ts",
    "src/svelte/*.d.ts"
  ],
  "exclude": ["node_modules", "dist", "src/svelte/*.svelte"]
}
