{
  "name": "@treksistem/db",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,json,md,css,html}\" --cache",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "deploy": "wrangler d1 migrations apply --remote"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.44.2",
    "nanoid": "^5.1.5"
  }
}
