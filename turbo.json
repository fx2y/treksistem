{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", ".svelte-kit/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:api": {
      "cache": false,
      "persistent": true
    },
    "dev:mitra": {
      "cache": false,
      "persistent": true
    },
    "dev:driver": {
      "cache": false,
      "persistent": true
    },
    "dev:public": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.test.ts", "src/**/*.test.tsx"]
    }
  }
}