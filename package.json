{
  "name": "treksistem",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@treksistem/api",
    "dev:mitra": "turbo run dev --filter=@treksistem/mitra-portal",
    "dev:driver": "turbo run dev --filter=@treksistem/driver-pwa",
    "dev:public": "turbo run dev --filter=@treksistem/public-site",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "format:all": "prettier --write \"**/*.{js,ts,tsx,json,md,css,html}\" --cache",
    "prepare": "husky"
  },
  "devDependencies": {
    "turbo": "^2.0.4",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "eslint": "^8.55.0",
    "typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  },
  "packageManager": "pnpm@9.1.4"
}
